                    <br />
                    <br />
                    <table >
                        <tr>
                            <td >
                                No hay Empleados registrados aun.
                            </td>
                        </tr>
                    </table>
                </EmptyDataTemplate>
                <Columns>

                    
                    
                    <asp:BoundField DataField="codigo" ItemStyle-CssClass="hiddencol " HeaderStyle-CssClass="hiddencol " />


                    
                    <asp:BoundField DataField="nombre" InsertVisible="True" />

                    
                    
                </Columns>

            
                
            </asp:GridView>
       
            <asp:Label ID="idEG"
                ForeColor="Red"
                runat="server" CssClass="hiddentext"/>
        <asp:Button Text="Editar Permisos" CssClass="btn btn-primary btn-sm" runat="server" ID="btnEnviarid" OnClick="btnEnviarId_Click" />
        
        
        </div>
        
    </section>
