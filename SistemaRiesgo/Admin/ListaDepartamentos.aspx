                CssClass ="table table-striped table-hover"
                BorderStyle ="Solid"
                BorderColor="WhiteSmoke"
                >
                <EmptyDataTemplate>
                    <br />
                    <br />
                    <table >
                        <tr>
                            <td >
                                No hay Departamentos registrados aun.
                            </td>
                        </tr>
                    </table>
                </EmptyDataTemplate>
                <Columns>

                    
                    
                    <asp:BoundField DataField="codigo"  ItemStyle-CssClass="hiddencol" HeaderStyle-CssClass="hiddencol " />


                    
                    <asp:BoundField
                        DataField="nombre" InsertVisible="True" />

                    
                    <asp:TemplateField HeaderText="Activos" >
                        <ItemTemplate>
                            <asp:Label ID="activos" runat="server">0</asp:Label>
                        </ItemTemplate>
                    </asp:TemplateField>
                </Columns>
                
            </asp:GridView>

            <asp:Label ID="codigo"
                ForeColor="Red"
                runat="server" CssClass="hiddentext"  />

        <asp:Button Text="Ver Empleados" CssClass="btn btn-primary btn-sm" runat="server" ID="btnEnviar" OnClick="btnEnviar_Click" />
            <br />
            <br />
        




        
            <h2>Empleados Globales</h2>
            
            <asp:HyperLink ID="nuevoEmpleado" NavigateUrl="CrearEmpleadoG" Text="Crear Empleado Global" runat="server" CssClass="btn btn-primary btn-sm" />
                  
        <asp:GridView ID="listaEmpleadosG" runat="server" 
                ItemType="SistemaRiesgo.Models.Empleado" DataKeyNames="codigo"
                SelectMethod="getEmpleadosG"
                DeleteMethod="listaEmpleadosG_DeleteItem"
                UpdateMethod="listaEmpleadosG_UpdateItem"
                onselectedindexchanged="listaEmpleadosG_SelectedIndexChanged"

            AutoGenerateDeleteButton="true" AutoGenerateEditButton="true" autogenerateselectbutton="true"
                AutoGenerateColumns="false"
                CssClass ="table table-striped table-hover"
                BorderStyle ="Solid"
                BorderColor="WhiteSmoke"
                RowHeaderColumn="listaEmpleadosG.HeaderRow.Cells[2].Visible=false;">
